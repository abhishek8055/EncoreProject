@model IEnumerable<EncoreML.ProductModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 product pb-2">
            <div class="row px-2 py-2">
                <img src="~/Images/@Html.DisplayFor(modelItem => item.PImage1)"
                     style="width: 100%; height: 250px;"
                     class="rounded mx-auto d-block">
            </div>
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <b>@Html.DisplayFor(modelItem => item.PName)</b>
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    @Html.DisplayFor(modelItem => item.PDescription)
                </div>
            </div>
            <hr />
            <div class="row mt-2">
                <div class="col-12 d-flex justify-content-center">
                    <a href="@Url.Action("ProductDetails", "Product", new { id = item.PId})" class="btn btn-success"><i class="fas fa-eye"></i>&nbsp;View</a>
                </div>
            </div>
        </div>
    }
</div>

    


